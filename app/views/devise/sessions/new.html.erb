<section id="content" class="m-t-lg wrapper-md animated fadeInUp">    
	<div class="container aside-xxl">
	  <a class="navbar-brand block" href="#">SoyReceptor</a>
	  <section class="panel panel-default bg-white m-t-lg">
	    <header class="panel-heading text-center">
	      <strong>Ingresar</strong>
	    </header>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', :class => 'panel-body wrapper-lg'}) do |f| %>
		<%= devise_error_messages! %>
	      <div class="form-group">
		    <%= f.label :email, 'E-mail', :class => 'control-label' %>
		    <%= f.email_field :email, :autofocus => true, class: 'form-control input-lg', :placeholder => 'usuario@miempresa.com' %>
	      </div>
	      <div class="form-group">
		    <%= f.label :password, :class => 'control-label' %>
		    <%= f.password_field :password, class: 'form-control input-lg', :placeholder => 'Password' %>
	      </div>
	      <% if devise_mapping.rememberable? -%>
	        <div class="checkbox">
	          <%= f.check_box :remember_me %> <%= f.label :remember_me, "Recordarme" %>
	        </div>
	      <% end -%>
	      <%- if devise_mapping.recoverable? %>
	        <%= link_to "Olvide mi Password", new_password_path(resource_name), class: 'pull-right m-t-xs' %>
	      <% end -%>
		  <%= f.submit 'Entrar', :class => 'btn btn-primary' %>
	      <div class="line line-dashed"></div>
	      <p class="text-muted text-center"><small>Â¿No Tienes Cuenta?</small></p>
		  <%= link_to 'Crear una Cuenta', new_user_registration_path, :class => 'btn btn-default btn-block' %>
	    <% end %>
	  </section>
	</div>
</section>