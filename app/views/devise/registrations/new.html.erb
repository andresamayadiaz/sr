<section id="content" class="m-t-lg wrapper-md animated fadeInDown">
	<div class="container aside-xxl">
	  <a class="navbar-brand block" href="#">SoyReceptor</a>
	  <section class="panel panel-default m-t-lg bg-white">
	    <header class="panel-heading text-center">
	      <strong>Registro</strong>
	    </header>
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form', :class => 'panel-body wrapper-lg'}) do |f| %>
		<%= devise_error_messages! %>
	      <div class="form-group">
	        <%= f.label :name, 'R.F.C. (sin guiones ni espacios)', :class => 'control-label' %>
	        <%= f.text_field :name, :autofocus => true, class: 'form-control input-lg', :placeholder => 'RFC de tu Empresa' %>
	      </div>
	      <div class="form-group">
	        <%= f.label :email, 'E-mail', :class => "control-label" %>
	        <%= f.email_field :email, class: 'form-control input-lg', :placeholder => 'usuario@miempresa.com' %>
	      </div>
	      <div class="form-group">
		    <%= f.label :password, 'Password', :class => 'control-label' %>
		    <%= f.password_field :password, class: 'form-control input-lg', :placeholder => 'Password' %>
	      </div>
	      <div class="form-group">
		    <%= f.label :password_confirmation, 'Confirmar Password', :class => 'control-label' %>
		    <%= f.password_field :password_confirmation, class: 'form-control input-lg', :placeholder => 'Password' %>
	      </div>
	      <div class="checkbox">
	        <label>
	          <input type="checkbox"> Acepto los <a href="#">terminos y condiciones</a>
	        </label>
	      </div>
		  <%= f.submit 'Crear Cuenta', :class => 'btn btn-primary' %>
	      <div class="line line-dashed"></div>
	      <p class="text-muted text-center"><small>Â¿Ya tienes una Cuenta?</small></p>
		  <%= link_to 'Ingresar a mi Cuenta', new_session_path(resource_name), :class => 'btn btn-default btn-block' %>
	    <% end %>
	  </section>
	</div>
</section>