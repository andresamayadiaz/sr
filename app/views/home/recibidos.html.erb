<% content_for :breadcrumbs do %>
<!-- Breadcrumbs -->
<ul class="breadcrumb no-border no-radius b-b b-light pull-in">
  <li><a href="index.html"><i class="fa fa-home"></i> Inicio</a></li>
  <li>Comprobantes</li>
  <li class="active">Recibidos</li>
</ul>
<!-- /Breadcrumbs -->
<% end %>

<!-- Titulo Pagina -->
<div class="m-b-md">
  <h3 class="m-b-none">Comprobantes Recibidos</h3>
</div>
<!-- /Titulo Pagina -->

<!-- Lista de Emitidos -->
<section class="panel panel-default">
  <header class="panel-heading">
    Listado de Comprobantes Recibidos por la Empresa
  </header>
  <div class="row wrapper">
    <div class="col-sm-5 m-b-xs">
      <span class="help-block m-b-none">Desde</span>
	  <input class="input-sm input-s datepicker-input form-control" size="10" type="text" value="<%= Date.today.at_beginning_of_month %>" data-date-format="yyyy-mm-dd" >
	  <span class="help-block m-b-none">Hasta</span>
	  <input class="input-sm input-s datepicker-input form-control" size="10" type="text" value="<%= Date.today.at_end_of_month %>" data-date-format="yyyy-mm-dd" >
    </div>
    <div class="col-sm-4 m-b-xs">
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-sm btn-default">
          <input type="radio" name="options" id="option_dia" onChange="set_dia();"> Dia
        </label>
        <label class="btn btn-sm btn-default">
          <input type="radio" name="options" id="option_semana" onChange="set_semana();"> Semana
        </label>
        <label class="btn btn-sm btn-default active">
          <input type="radio" name="options" id="option_mes" onChange="set_mes();"> Mes
        </label>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="input-group">
        <input type="text" class="input-sm form-control" placeholder="Buscar" data-toggle="tooltip" data-placement="top" title="RFC, Receptor, UUID, Serie, ...">
        <span class="input-group-btn">
          <button class="btn btn-sm btn-default" type="button">Buscar</button>
        </span>
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped b-t b-light">
      <thead>
        <tr>
          <th width="20"></th>
          <th>UUID, Serie-Folio</th>
          <th>Emisor (RFC, Raz√≥n Social)</th>
		  <th class="text-center">Total</th>
          <th class="th-sortable" data-toggle="class">Fecha
            <span class="th-sort">
              <a><i class="fa fa-sort-down text"></i></a>
              <a><i class="fa fa-sort-up text-active"></i></a>
              <a><i class="fa fa-sort"></i></a>
            </span>
		  </th>
          <th width="30"></th>
        </tr>
      </thead>
      <tbody>
		<% @recibidos.each do |r| %>
		
	        <tr>
	          <td><i class="text-success fa fa-circle"></i></td>
	          <td><%= r.to_s %></td>
	          <td><%= r.emisor.to_s %></td>
	          <td class="text-right"><%= number_to_currency(r.total) %></td>
	          <td><%= r.fecha %></td>
			  <td><a href="#" class="btn btn-info">Ver</a></td>
	        </tr>
		
		<% end %>
      </tbody>
    </table>
  </div>
  <footer class="panel-footer">
    <div class="row">
      <div class="col-sm-4 hidden-xs">
      	<small class="text-muted inline m-t-sm m-b-sm">mostrando 20-30 de 50 comprobantes</small>
      </div>
      <div class="col-sm-4 text-center">
        
      </div>
      <div class="col-sm-4 text-right text-center-xs">                
        <ul class="pagination pagination-sm m-t-none m-b-none">
          <li><a href="#"><i class="fa fa-chevron-left"></i></a></li>
          <li><a href="#">1</a></li>
          <li class="active"><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
          <li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
        </ul>
      </div>
    </div>
  </footer>
</section>
<!-- /Lista de Emitidos -->

